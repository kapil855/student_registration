<p id="notice"><%= notice %></p>
  <div class="row">
    <div class="col-md-4">
      <%= search_form_for @q do |f|%>
      <div class="card border-dark">
        <div class="card-header bg-success">
          <h3 class="text-center ">Filter</h3>
        </div>
        <div class="card-body">
          <div>
            <%= f.label :full_name %>
            <%= f.text_field :first_name_or_middle_name_or_last_name_cont, class: "form-control mb-2" %>
          </div>
          <div>
            <%= f.label :email %>
            <%= f.text_field :email_cont, class: "form-control mb-2" %>
          </div>
          <div>
            <%= f.label :city %>
            <%= f.text_field :city_cont, class: "form-control mb-2" %>
          </div>
          <div>
            <%= f.submit "Search", class: "btn btn-primary mt-4" %>
            <%= link_to "Clear", request.path, class: "btn btn-danger text-white mt-4" %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
    <div class="col-md-8">
      <table class="table-responsive table-bordered table-striped text-center mb-3">
        <%= render 'table_header' %>
        <tbody>
          <% @students.each do |student| %>
            <%= render 'student', student: student %>
          <% end %>
        </tbody>
      </table>
      <%= paginate @students %>
        <br>
      <%= link_to 'New Student', new_student_path %>
    </div>
  </div>
