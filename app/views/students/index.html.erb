<p id="notice"><%= notice %></p>
<table class="table-responsive table-bordered table-striped text-center">
  <thead class="bg-warning">
    <tr>
      <th colspan="17"><h2><b>Student Details</b></h2></th>
    </tr>
    <tr>
      <th>Full name</th>
      <th>Email</th>
      <th>Gender</th>
      <th>Date of birth</th>
      <th>Contact no</th>
      <th>Qualification</th>
      <th>Passout pursuing</th>
      <th>Date of joining</th>
      <th>Course</th>
      <th>Address</th>
      <th>Address2</th>
      <th>City</th>
      <th>State</th>
      <th>Pincode</th>
      <th colspan="3" class="text-center">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.full_name %></td>
        <td><%= student.email %></td>
        <td><%= student.gender %></td>
        <td><%= formatted_date(student.date_of_birth) %></td>
        <td><%= student.contact_no %></td>
        <td><%= student.qualification %></td>
        <td><%= student.passout_pursuing %></td>
        <td><%= formatted_date(student.date_of_joining) %></td>
        <td><%= student.course %></td>
        <td><%= student.address %></td>
        <td><%= student.address2 %></td>
        <td><%= student.city %></td>
        <td><%= student.state %></td>
        <td><%= student.pincode %></td>
        <td><%= link_to 'Show', student ,class: "btn btn-success text-white"%></td>
        <td><%= link_to 'Edit', edit_student_path(student),class: "btn btn-primary text-white" %></td>
        <td><%= button_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

