<%= form_with(model: student) do |form| %>
  <% if student.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(student.errors.count, "error") %> prohibited this student from being saved:</h2>
      <ul>
        <% student.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="card mt-5 border-dark">
    <div class="card-header bg-primary">
      <h3 class="text-center text-white"><b>New Student Registration</b></h3>
    </div>
    <div class="card-body">
      <div class="form-group">
        <%= form.label :first_name %>
        <%= form.text_field :first_name , class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.label :middle_name %>
        <%= form.text_field :middle_name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.label :last_name %>
        <%= form.text_field :last_name , class: "form-control"%>
      </div>
      <div class="form-group">
        <%= form.label :email %>
        <%= form.text_field :email, class: "form-control"%>
      </div>
        <%= form.label :gender ,'Gender' %>
      <div class="form-check">
        <%= form.radio_button :gender, 'Male', class: "form-check-input", id:"male" %>
        <%= form.label :Male ,class: "form-check-label",for: "male" %>
      </div>
      <div class="form-check mt-2">
        <%= form.radio_button :gender, 'Female', class: "form-check-input", id:"female"%>
        <%= form.label :Female ,class: "form-check-label",for: "female" %>
      </div>
      <div class="form-group mt-3">
        <%= form.label :date_of_birth %>
        <%= form.date_field :date_of_birth, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.label :contact_no %>
        <%= form.telephone_field :contact_no, class: "form-control" %>
      </div>
      <div class="field">
        <%= form.label :qualification %>
        <%= form.select :qualification, options_for_select(Student::QUALIFICATION,selected:student.qualification), { prompt: 'Select Qualification'}, {class: "form-control"} %>
      </div>
      <div class="form-check">
        <%= form.radio_button :passout_pursuing, 'Passout', class: "form-check-input" , id:"passout" %>
        <%= form.label :passout, class: "form-check-label", for: "passout"%>
      </div>
      <div class="form-check">
        <%= form.radio_button :passout_pursuing, 'Pursuing', class: "form-check-input" ,id: "pursuing" %>
        <%= form.label :pursuing, class: "form-check-label", for: "pursuing" %>
      </div>
      <div class="form-group mt-3">
        <%= form.label :date_of_joining %>
        <%= form.date_field :date_of_joining, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.label :course %>
        <%= form.select :course, options_for_select(Student::COURSE_LIST, selected: student.course), { prompt: 'Select Course' },  { class: "form-control" } %>
      </div>
      <div class="form-group">
        <%= form.label :address %>
        <%= form.text_field :address, class: "form-control", placeholder: "Main street.." %>
      </div>
      <div class="form-group">
        <%= form.label :address2 %>
        <%= form.text_field :address2, class: "form-control", placeholder: "Apartment,Floor..." %>
      </div>
      <div class="form-group">
        <%= form.label :city %>
        <%= form.text_field :city , class: "form-control"  %>
      </div>
      <div class="form-group">
        <%= form.label :state %>
        <%= form.text_field :state , class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.label :pincode %>
        <%= form.number_field :pincode, class: "form-control" %>
      </div>
      <div class="mt-3">
        <%= form.submit class: 'btn-lg btn-success btn-block'%>
      </div>
    </div>
  </div>
<% end %>
  